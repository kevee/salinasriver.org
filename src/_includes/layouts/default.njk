---
layout: layouts/base.njk
---

<header>
  <div class="container">
    <nav aria-label="Main navigation">
      <ul>
        <li>
          <a href="{{ "/" | locale_url }}">{{ 'theSalinasRiver' | i18n }}</a>
        </li>
        <li>
          <a href="{{"/access-points"| locale_url }}">{{ 'accessPoints' | i18n }}</a>
        </li>
        <li>
          <a href="{{"/trips" | locale_url }}">{{ 'trips' | i18n }}</a>
        </li>
        <li>
          <a href="{{"/overview" | locale_url }}">{{ 'overview' | i18n }}</a>
        </li>
        <li class="language" >
          <a href="{{ page.url | switchUrlLanguage }}">
            {% if page.lang === 'en' %}En Espa√±ol{% else %}In English{% endif %}
          </a>
        </li>
      </ul>

    </nav>
  </div>
</header>
{% include 'flood-warning.njk' %}
<div class="container">
  {% if breadcrumbs %}
    <nav class="breadcrumbs" aria-label="breadcrumbs">
      <ol>
        {% for breadcrumb in breadcrumbs %}
          <li>
            <a href="{{breadcrumb.link | locale_url }}">{{breadcrumb.name}}</a>
          </li>
        {% endfor %}
        <li>
          <a href="#" aria-current="page">{{ title }}</a>
        </li>
      </ol>
    </nav>
  {% endif %}
  <section>
    {{ content | safe }}
  </section>
</div>
{% include 'footer.njk' %}
---
layout: layouts/default.njk
scripts: 
  - /assets/js/leaflet/leaflet.js
  - /assets/js/access-point.js
---

<nav class="breadcrumbs" aria-label="breadcrumbs">
  <ol>
    <li><a href="/">Home</a></li>
    <li><a href="/access-points">Access points</a></li>
    <li><a href="#" aria-current="page">{{ title }}</a></li>
  </ol>
</nav>

<h1>{{ title }}</h1>
<dl role="list">
  {% include 'overview.njk' %}
  {% set showTrips = false %}
  {% for trip in collections.trips %}
        {%for point in trip.data.accessPoints %}
          {% if point.id == page.fileSlug %}
            {% set showTrips = true %}
          {% endif %}
        {% endfor %}
      {% endfor %}
  {% if showTrips %}
  <div>
    <dt>Related trips</dt>
    <dd>
    <ul class="inline-list">
      {% for trip in collections.trips %}
        {%for point in trip.data.accessPoints %}
          {% if point.id == page.fileSlug %}
            <li><a href="/trips/{{ trip.fileSlug }}">{{ trip.data.title }}</a></li>
          {% endif %}
        {% endfor %}
      {% endfor %}
      </ul>
    </dd>
  </div>
  {% endif %}
  <div>
    <dt>Driving directions</dt>
    <dd><a
    href="https://www.google.com/maps/dir/{{ lat }},{{ lon }}"
    target="_blank"
    rel="noreferrer"
    >View in Google maps</a
  ></dd>
  </div>
</dl>

{{ content | safe}}


<h2>Directions</h2>


{{ directions | markdown | safe }}


<div class="map short">
  <div id="map"></div>
</div>

<script>
  window._accessPointPath = {{ directionsPath | json | safe }}
  window._accessPointLat = {{ lat }}
  window._accessPointLon = {{ lon }}
</script>
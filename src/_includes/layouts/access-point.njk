---
layout: layouts/default.njk
---

<nav class="breadcrumbs" aria-label="breadcrumbs">
  <ol>
    <li><a href="/">Home</a></li>
    <li><a href="/access-points">Access points</a></li>
    <li><a href="#" aria-current="page">{{ title }}</a></li>
  </ol>
</nav>

<h1>{{ title }}</h1>
{{ content | safe}}

{% if tresspass %}
  <p><strong>Tresspass potential</strong> â€” parts of this area is on private land, be <a href="/info/safety#tresspass">tresspass aware</a>.</p>
{% endif %}

{% include 'flow.njk' %}

<h2>Directions</h2>

<p>
  <a
    href="https://www.google.com/maps/dir/{{ lat }},{{ lon }}"
    target="_blank"
    rel="noreferrer"
    >Driving directions</a
  >
</p>

{{ directions | markdown | safe }}

{% if images %}
  {% for img in images %}
    {% image img.src, img.title, '600px' %}
  {%endfor %}
{% endif %}

<div class="map short">
  <div id="map"></div>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
  window._accessPointPath = {{ directionsPath | json | safe }}
  window._accessPointLat = {{ lat }}
  window._accessPointLon = {{ lon }}
</script>
<script src="/assets/js/access-point.js"></script>
---
layout: layouts/default.njk
---

<nav class="breadcrumbs" aria-label="breadcrumbs">
  <ol>
    <li><a href="/">Home</a></li>
    <li><a href="/access-points">Access points</a></li>
    <li><a href="#" aria-current="page">{{ title }}</a></li>
  </ol>
</nav>

<h1>{{ title }}</h1>
<dl role="list">
  {% include 'overview.njk' %}
  <div>
    <dt>Driving directions</dt>
    <dd><a
    href="https://www.google.com/maps/dir/{{ lat }},{{ lon }}"
    target="_blank"
    rel="noreferrer"
    >View in Google maps</a
  ></dd>
  </div>
</dl>

{{ content | safe}}


<h2>Directions</h2>


{{ directions | markdown | safe }}


<div class="map short">
  <div id="map"></div>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
  window._accessPointPath = {{ directionsPath | json | safe }}
  window._accessPointLat = {{ lat }}
  window._accessPointLon = {{ lon }}
</script>
<script src="/assets/js/access-point.js"></script>
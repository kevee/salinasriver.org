---
layout: layouts/default.njk
---

<nav class="breadcrumbs" aria-label="breadcrumbs">
  <ol>
    <li><a href="/">Home</a></li>
    <li><a href="/trips">Trips</a></li>
    <li>
      <a href="#" aria-current="page">{{ title }}</a>
    </li>
  </ol>
</nav>

<h1>{{ title }}</h1>

<dl role="list">
  <div>
    <dt>Length</dt>
    <dd>{{ length }}</dd>
  </div>
  <div>
    <dt>Time</dt>
    <dd>{{ time }}</dd>
  </div>
  <div>
    <dt>Best flow</dt>
    <dd>
      {{ flowLow }} to {{ flowHigh }}
      <abbr title="Cubic-feet per second">cfs</abbr> at
      <a
        href="https://waterdata.usgs.gov/nwis/uv?site_no={{ guages[guage].id }}"
        target="_blank"
        rel="noreferrer"
        >{{ guages[guage].label }}</a
      >
    </dd>
  </div>
  <div>
    <dt>Current flow</dt>
    <dd>
      {% if guages[guage].cfs < 0 %} 0 {% else %}{{ guages[guage].cfs }} {%
      endif %} <abbr title="Cubic-feet per second">cfs</abbr>
      {% if guages[guage].cfs >= flowLow and guages[guage].cfs <= flowHigh %}
      <span class="flow-inline good">Good flow</span>{% endif %} {% if
      guages[guage].cfs < flowLow and guages[guage].cfs >= 0%}<span
        class="flow-inline below"
        >Below recommended flow</span
      >{% endif %} {% if guages[guage].cfs > flowHigh %}<span
        class="flow-inline above"
        >Above recommended flow</span
      >{% endif %}{% if guages[guage].cfs < 0 and flowLow > 0%}<span
        class="flow-inline none"
        >No flow</span
      >{% endif %}
      <small class="flow-update">Updated {% buildDate %}</small>
    </dd>
  </div>
  {% if gear %}
  <div>
    <dt>Gear</dt>
    <dd>
      <ul>
        {% for gearItem in gear %}
        <li>{{ gearItem }}</li>
        {% endfor %}
      </ul>
    </dd>
  </div>
  {% endif %}
</dl>

{{ content | safe }}

{% if safety %}
{{ safety | markdown | safe }}
{% endif %}

<h3>Set-up</h3>

{{ setUp | markdown | safe }}

<div class="map">
  <div id="map"></div>
</div>

<section class="trip-parts">
  <h2>Description</h2>
  {%- for part in parts -%}
  <div class="trip-part">
    <h3 id="{{ part.id }}">{{ part.title }}</h3>

    <p class="mile"><strong>Distance:</strong> {{ part.mile }} miles</p>

    {{ part.description | markdown | safe }}
    {% if part.driving %}

    <p>
      <a
        href="https://www.google.com/maps/dir/{{ part.lat }},{{ part.lon }}"
        target="_blank"
        rel="noreferrer"
        >Driving directions</a
      >
    </p>
    {% endif %}
  </div>
  {%- endfor -%}
</section>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
  window._tripRoute = {{ route | json | safe }}
  window._tripParts = {{ parts | json | safe }}
</script>
<script src="/assets/js/trip.js"></script>

---
layout: layouts/base.njk
scripts: 
  - /assets/js/leaflet/leaflet.js
  - /assets/js/home.js
addAccessPoints: true
addTrips: true
---
<main class="homepage">
  {% include 'flood-warning.njk' %}
  <div class="column-container">
    <div class="columns">
      <div class="main">{{ content | safe}}</div>
      <div class="sidebar">
        <div class="map" aria-hidden="true">
          <div id="map"></div>
          <div class="key">
            <p>
              <span class="spot"></span>{{ 'accessPoint' | i18n }}</p>
            <p>
              <span class="spot trip"></span>{{ 'trip' | i18n }}</p>
            <div></div>
          </div>
          <div class="a11y-only">
            <h2>{{ 'accessPoints' | i18n }}</h2>
            <ul>
              {% for point in collections.accessPoint %}
                <li>
                  <a href="{{ "/access-points/{{point.fileSlug}}"| locale_url }}">{{ point.data.title }}</a>
                </li>
              {% endfor %}
            </ul>
            <h2>{{ 'trips' | i18n }}</h2>
            <ul>
              {% for trip in collections.trips %}
                <li>
                  <a href="{{"/trips/{{trip.fileSlug}}" | locale_url }}">{{ trip.data.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </main>
    {% include 'footer.njk' %}
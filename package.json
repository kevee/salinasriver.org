{
  "name": "salinasriver-11ty",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "npx @11ty/eleventy --serve",
    "build:guages": "node ./src/_tools/guages.js ",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "build:eleventy": "npx @11ty/eleventy",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:guages build:sass build:eleventy",
    "deploy:gh-pages": "gh-pages -d public",
    "deploy:cname": "echo \"next.salinasriver.org\" > ./public/CNAME",
    "deploy": "npm-run-all build deploy:cname deploy:gh-pages"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.10.0",
    "autoprefixer": "^10.3.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.8",
    "gh-pages": "^3.2.3",
    "luxon": "^2.0.2",
    "markdown-it": "^12.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "sass": "^1.38.0",
    "fs-extra": "^10.0.0",
    "node-fetch": "^2.6.1"
  }
}
